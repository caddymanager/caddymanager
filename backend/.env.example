# Server Configuration
PORT=3000
NODE_ENV=development


# Database Engine (mongodb or sqlite)
DB_ENGINE=mongodb

# MongoDB Connection
MONGODB_URI=

# SQLite Connection
SQLITE_DB_PATH=./caddymanager.sqlite

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# Caddy sandbox URL
CADDY_SANDBOX_URL=http://localhost:2019

# Ping Configuration
# Values are in milliseconds
PING_INTERVAL=30000
PING_TIMEOUT=2000

# Audit Logging Configuration
# Maximum size of the audit log collection in megabytes
AUDIT_LOG_MAX_SIZE_MB=100
# Number of days to retain audit logs (optional, set to 0 to disable automatic deletion)
AUDIT_LOG_RETENTION_DAYS=90