# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=your_mongodb_uri_here

# JWT Authentication (if you implement it later)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# Caddy Default Admin Credentials
# These are example values - use secure credentials in production
DEFAULT_CADDY_ADMIN_USER=user
DEFAULT_CADDY_ADMIN_PASSWORD=caddyrocks

# Caddy sandbox URL
CADDY_SANDBOX_URL=http://localhost:2019

# Ping Configuration
# Values are in milliseconds
PING_INTERVAL=30000
PING_TIMEOUT=2000

# Audit Logging Configuration
# Maximum size of the audit log collection in megabytes
AUDIT_LOG_MAX_SIZE_MB=100
# Number of days to retain audit logs (optional, set to 0 to disable automatic deletion)
AUDIT_LOG_RETENTION_DAYS=90